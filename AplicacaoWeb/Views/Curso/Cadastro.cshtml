@model AplicacaoWeb.Models.Model.Curso

<h2>Cadastro de Cursos</h2>

<br />

<form asp-controller="Curso" asp-action="Cadastro">
    <input type="hidden" asp-for="IdCurso" value="@try { @ViewBag.Curso.IdCurso } catch { }" />

    <div class="form-group">
        <label>Nome do Curso</label>
        <input asp-for="Nome" type="text" class="form-control" value="@try { @ViewBag.Curso.Nome } catch { }" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Tipo</label>
        <input asp-for="Tipo" type="text" class="form-control" value="@try { @ViewBag.Curso.Tipo } catch { }" />
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Empresa</label>
        <select asp-for="IdInstituicao" class="form-control">
            @{
                foreach (var item in (List<AplicacaoWeb.Models.Model.Instituicao>)ViewBag.ListarIntituicoes)
                {
                    <option value="@item.IdInstituicao">@item.Nome</option>
                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-block btn-success">Registrar</button>
</form>


