@model AplicacaoWeb.Models.Model.Empresa
<h2>Cadastro de Empresass</h2>

<br />

<form asp-controller="Empresas" asp-action="Cadastro">
    <input type="hidden" asp-for="IdEmpresa" value="@try { @ViewBag.Empresa.IdEmpresa } catch { }" />

    <div class="form-group">
        <label>Nome da Empresa</label>
        <input asp-for="RazaoSocial" type="text" class="form-control" value="@try { @ViewBag.Empresa.RazaoSocial } catch { }" />
        <span asp-validation-for="RazaoSocial" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>CNPJ</label>
        <input asp-for="CNPJ" type="text" class="form-control" value="@try { @ViewBag.Empresa.CNPJ } catch { }" />
        <span asp-validation-for="CNPJ" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Incriçao Estadual</label>
        <input asp-for="IE" type="text" class="form-control" value="@try { @ViewBag.Empresa.IE } catch { }" />
        <span asp-validation-for="IE" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Incriçao Municipal</label>
        <input asp-for="IM" type="text" class="form-control" value="@try { @ViewBag.Empresa.IM } catch { }" />
        <span asp-validation-for="IM" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Complemento</label>
        <input asp-for="Complemento" type="text" class="form-control" value="@try { @ViewBag.Empresa.Complemento } catch { }" />
        <span asp-validation-for="Complemento" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-block btn-success">Registrar</button>
</form>
